generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BLOCKED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  projects  Project[] @relation("ProjectCreator")
  tasks     Task[]    @relation("TaskCreator")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  createdBy   User     @relation("ProjectCreator", fields: [createdById], references: [id])
  createdById String

  tasks       Task[]

  @@index([createdById])
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus
  dueDate     DateTime?
  createdAt   DateTime   @default(now())

  project     Project    @relation(fields: [projectId], references: [id])
  projectId   String

  createdBy   User       @relation("TaskCreator", fields: [createdById], references: [id])
  createdById String

  @@index([projectId])
  @@index([createdById])
  @@index([status])
}
